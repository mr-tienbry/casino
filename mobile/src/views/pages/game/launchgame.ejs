<% if (error !==null) { %>
    <!-- Nếu xảy ra lỗi -->
    <script>setTimeout(() => {
            alert(`Khởi chạy trò chơi thất bại!`);
            alert(`<%=error%>`);
            // close tab
            window.close();
        }, 3000);</script>
    <% }else { %>
        <!-- Nếu thành công -->
        <script>
            const convertHTML = (string) => {
                return string.replaceAll('&amp;', '&')
                    .replaceAll("&gt;", ">")
                    .replaceAll("&lt;", "<")
                    .replaceAll("&quot;", '"')
                    .replaceAll("&apos;", "'");
            }

            setTimeout(() => {
                window.location = convertHTML("<%=dataApi.playUrl%>");
            }, 3000);</script>
        <% } %>

